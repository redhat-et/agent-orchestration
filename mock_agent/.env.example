# =============================================================================
# A2A Agent Configuration
# =============================================================================

# Core agent settings
export AGENT_NAME="cdn-xy-zz-0009-debug-agent"
export A2A_SIGNING_KID="<your-agent-name>"
export HOST="0.0.0.0"
export PORT="10000"

# Security & signing
export A2A_SIGN_CARD="true"
# Set the JWKS URL for verifying agent cards.
# Replace this with your trusted JWKS endpoint as needed.
export JWKS_URL="https://<your-jwks-server.example.com>/.well-known/jwks.json"
export A2A_JWKS_URL="$JWKS_URL"          # agent advertises here (jku)
export A2A_TRUSTED_JWKS_URL="$JWKS_URL"  # verifier trusts this source


# Optional overrides
export A2A_REQUIRE_VERIFIED_CARD="true"
export BASE_URL=""